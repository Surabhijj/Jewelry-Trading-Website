<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>SJ jewelers</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/general_style.css">
    <!-- <link rel="stylesheet" type="text/css" href="/css/style.css"> -->
    <script src="/javascript/jquery-3.6.3.min.js"></script>
    <script src="/javascript/custom.js"></script>
  <body class=" body ">
    <header class="jewelry_banner">
      <div class="">

        <nav class="navbar navbar-expand navbar-dark top-nav">
          <div>
            <a class=" navbar-brand col-lg-9" href="/"><img src="/images/logo.png" alt="Logo" width="200"></a>

          </div>
          <div class=" container  m-auto">
            <ul class="  login_div navbar-nav">
              <li class="nav-item "><a class="nav-link text-light" href="/trades/newTrade">START TRADING</a></li>
              <%if(!user){%>
              <li class="nav-item "><a class="nav-link text-light" href="/users/login">LOGIN</a></li>
              <li class="nav-item "><a class="nav-link text-light" href="/users/new">SIGN UP</a></li>
              <%}
              else{%>
              <li class="nav-item "><a class="nav-link text-light" href="/users/profile">PROFILE</a></li>
              <li class="nav-item "><a class="nav-link text-light" href="/users/LOGOUT">LOGOUT</a></li>
              <%}%>


            </ul>
          </div>
        </nav>
        <nav class="navbar navbar-expand bg-primary">
          <div class=" ms-4">
            <ul class=" navbar-nav">
              <li class="nav-item "><a class="nav-link text-light ms-5" href="/trades">TRADE</a></li>
              <li class="nav-item "><a class="nav-link text-light" href="/">HOME</a></li>

            </ul>
          </div>
        </nav>
      </div>
    

    </header>



    
  
    <%if(errorMessages.length > 0){%>
      <div class="container-fluid bg-light">
        <div class="container-fluid p-2" style="width:80%">
          <%errorMessages.forEach(message=>{%>
          <label class="font-weight-bold text-danger"><%=message%></label>
          <%});%>
        </div>
      </div>
    <%}%>


  
    <%if(successMessages.length > 0){%>
      <div class="container-fluid bg-light">
        <div class="container-fluid p-2" style="width:80%">
          <%successMessages.forEach(message=>{%>
          <label class="font-weight-bold text-success"><%=message%></label>
          <%});%>
        </div>
      </div>
    <%}%>


  