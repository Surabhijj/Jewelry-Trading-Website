<%- include('../partials/header.ejs')%>

    <main class="main_class">
        <div class="container m-auto">
            <h1>Sign UP</h1>
           
            <form action="/users" method="POST">

             
              <div>
                <div class="form-group ">
                    <label for="firstName">First Name<span class="required text-danger">*</span></label><br>
                    <input type="text" id="firstName" name="firstName" required><br><br>
                </div>
              </div>


              <div>
              <div class="form-group">
                <label for="lastName">Last Name<span class="required text-danger">*</span></label><br>
                <input type="text" id="lastName" name="lastName" required><br><br>
              </div>
              </div>

              <div>
                <div class="form-group ">
                    <label for="email">Email<span class="required text-danger">*</span></label><br>
                    <input type="email" id="email" name="email" required><br><br>
                </div>
              </div>


              <div>
              <div class="form-group">
                <label for="password">Password<span class="required text-danger">*</span></label><br>
                <input type="password" id="password" name="password" required minlength="8" maxlength="64"><br><br>
              </div>
              </div>


              

              <div>
                <button class=" btn btn-info" >SIGNUP  </button>
                <button class=" btn btn-info bg-danger" >CANCEL  </button>

               </div>

            </form>
       </div>
    </main>
    
    <div class=" foot fixed-bottom ">

      <%- include('../partials/footer.ejs')%>